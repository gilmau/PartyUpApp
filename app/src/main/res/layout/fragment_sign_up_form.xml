<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_margin="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/partyupapp_title_sign_up_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="cursive"
            android:text="Party Up"
            android:textAlignment="center"
            android:textColor="@color/title_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/title_sign_up_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/lists_background">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                style="@style/Login_Dialog_TextLayout">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_const"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:id="@+id/name_sign_up_form"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                style="@style/Login_Dialog_TextLayout">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_const"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_sign_up_form"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                style="@style/Login_Dialog_TextLayout">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_const"
                    android:inputType="textPassword"
                    android:id="@+id/password_sign_up_form"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                style="@style/Login_Dialog_TextLayout">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password_const"
                    android:inputType="textPassword"
                    android:id="@+id/password_confirm_sign_up_form"
                    />

            </android.support.design.widget.TextInputLayout>


            <CheckBox
                android:id="@+id/dj_or_not_button_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:focusable="auto"
                android:text="I'M A DJ" />


            <EditText
                android:id="@+id/about_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About"
                android:inputType="textPersonName"
                android:maxLines="4"
                android:visibility="gone"
                android:textSize="24sp"/>


            <TextView
                android:id="@+id/geners_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geners"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <GridLayout
                android:id="@id/geners_pick_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignBounds">


                <CheckBox
                android:id="@+id/genre_electronic"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                    android:layout_gravity="left"
                android:text="Electonic" />

                <CheckBox
                    android:id="@+id/genre_rock"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:text="Rock" />


                <CheckBox
                    android:id="@+id/genre_pop"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:text="Pop" />

                <CheckBox
                    android:id="@+id/genre_reggae"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="left"
                    android:text="Reggae" />

                <CheckBox
                    android:id="@+id/genre_hiphop"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:text="Hip Hop" />


                <CheckBox
                    android:id="@+id/genre_israeli"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_gravity="right"
                    android:text="Israeli" />

            </GridLayout>

            <TextView
                android:id="@+id/profile_pic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/add_profile_pic" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/confirmBox"/>

    </LinearLayout>

</ScrollView>